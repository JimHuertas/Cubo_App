<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <Button
        android:id="@+id/button5"
        android:layout_width="132dp"
        android:layout_height="34dp"
        android:background="@drawable/borde_blanco"
        android:text="Eliminar Todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.996"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="411dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="#FFFFFF"

        android:text="Tus Tiempos"
        android:textAlignment="center"
        android:textColor="#2D2F31"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="441dp"
        android:layout_height="100dp"
        android:background="#E4353535"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo" />
    </FrameLayout>

    <ListView
        android:id="@+id/lst_Datos"
        android:layout_width="441dp"
        android:layout_height="535dp"
        android:layout_marginTop="60dp"
        android:background="#A4009688"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.253"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="1.0">

    </ListView>

    <FrameLayout
        android:id="@+id/frameLayout3"
        android:layout_width="451dp"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:background="#FFEB3B"
        app:layout_constraintBottom_toTopOf="@+id/lst_Datos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/edtNombre"
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="#FFFFFF"
            android:hint="Ingrese su Id "
            android:inputType="number" />

        <Button
            android:id="@+id/button4"
            android:layout_width="49dp"
            android:layout_height="35dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="24dp"
            android:background="@drawable/borde_verde"
            android:foreground="@android:drawable/ic_menu_search" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>